<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".sultanahmet">

    <ImageView
        android:id="@+id/geri"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="geri"
        android:src="@drawable/geri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="229dp"
        android:layout_height="144dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textView21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sultanresim1" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="257dp"
        android:layout_height="170dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/sultanresim2" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="187dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="34dp"
        android:text="Sultanahmet Camii"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Sultanahmet Camii, İstanbul'un tarihi yarımadasında yer alan Osmanlı dönemi camilerinden biridir.  İnşası 1609-1616 yılları arasında tamamlanmıştır ve mimarisiyle göz alıcı bir görünüm sunar. İçerisinde 6 minaresi ve 43 metre yüksekliği ile dikkat çeken kubbesi bulunmaktadır.  Mavi İznik çinileri ile kaplı iç mekânı, Osmanlı dönemi sanatının en güzel örneklerinden biridi"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Sultanahmet Camii, İstanbul'un en popüler turistik yerlerinden biridir ve her yıl binlerce turist tarafından ziyaret edilir.  Caminin bulunduğu alan aynı zamanda tarihi bir bölgedir. Ayasofya, Topkapı Sarayı, Yerebatan Sarnıcı ve Kapalıçarşı gibi diğer tarihi yerlere yakın bir konumdadır.  Bu nedenle, İstanbul'daki tarihi ve kültürel turistik yerleri ziyaret etmek isteyenler için popüler bir yerdir."
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
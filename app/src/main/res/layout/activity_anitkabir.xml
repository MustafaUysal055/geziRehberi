<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".anitkabir">

    <ImageView
        android:id="@+id/geri"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="geri"
        android:src="@drawable/geri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="211dp"
        android:layout_height="169dp"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="91dp"
        app:layout_constraintBottom_toTopOf="@+id/textView34"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/antkabirresim1" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="285dp"
        android:layout_height="131dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/antkabirresim2" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="392dp"
        android:layout_height="123dp"
        android:layout_marginEnd="1dp"
        android:text="Anıtkabir, Türkiye'nin başkenti Ankara'da bulunan Mustafa Kemal Atatürk'ün anıt mezarıdır.  Anıt, Türkiye Cumhuriyeti'nin kurucusu ve ilk cumhurbaşkanı olan Atatürk'ün anısına yapılmıştır. Anıtkabir, Ankara'nın en yüksek tepesi olan Anıttepe'de yer almaktadır. İçinde, Atatürk'ün mozolesi ve müzesi bulunmaktadır."
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="396dp"
        android:layout_height="146dp"
        android:text="Atatürk'ün mezarını koruyan iki askerin bulunduğu kapılar ve Türk bayrağı ile çevrili olan anıtın en yüksek noktasındaki devasa bayrak yer almaktadır. Anıtkabir, Türkiye'nin en önemli tarihi ve kültürel simgelerinden biridir.  Ziyaretçiler, Atatürk'ün hayatı ve Türkiye Cumhuriyeti'nin kuruluşu hakkında daha fazla bilgi edinebilir ve anıtın mimari ve sanatsal özelliklerini keşfedebilirler."
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="135dp"
        android:layout_height="39dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="19dp"
        android:text="Anıtkabir"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/geri"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
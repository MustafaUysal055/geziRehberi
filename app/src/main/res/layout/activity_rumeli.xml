<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".rumeli">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="187dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="20dp"
        android:text="Rumeli Hisarı"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/geri"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:onClick="geri"
        android:src="@drawable/geri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="210dp"
        android:layout_height="156dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textView25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rumeliresim1" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="386dp"
        android:layout_height="117dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="12dp"
        android:text="Rumeli Hisarı, İstanbul Boğazı'nın Avrupa yakasında, Sarıyer ilçesinde yer alan bir tarihi kale ve müze. 15. yüzyılda  Fatih Sultan Mehmet tarafından İstanbul'un fethi sırasında inşa edilmiştir. Rumeli Hisarı, İstanbul'un en ünlü tarihi yapılarından biridir ve Türk tarihinin en önemli anıtlarından biri olarak kabul edilir."
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="394dp"
        android:layout_height="135dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="16dp"
        android:text="Kale, 3 kule ve 1 büyük burçtan oluşur ve günümüzde müze olarak ziyaret edilebilir. Rumeli Hisarı, İstanbul'un turistik yerlerinden biridir ve ziyaretçiler, tarihi yapısını ve boğaz manzarasını görmek için burayı ziyaret ederler.  Ayrıca, Rumeli Hisarı'nın bahçesi, yaz aylarında çeşitli kültürel etkinlikler için kullanılır ve geleneksel Türk düğünleri de burada yapılabilir."
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="226dp"
        android:layout_height="148dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rumeliresim2" />

</androidx.constraintlayout.widget.ConstraintLayout>
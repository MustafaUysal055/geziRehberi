<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".baslangic">

    <ImageView
        android:id="@+id/trGezi"
        android:layout_width="157dp"
        android:layout_height="129dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="39dp"
        android:onClick="trGezi"
        app:layout_constraintBottom_toTopOf="@+id/plakaUlke"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView36"
        app:srcCompat="@drawable/trgezi" />

    <ImageView
        android:id="@+id/plakaUlke"
        android:layout_width="159dp"
        android:layout_height="127dp"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="313dp"
        android:onClick="plakaUlke"
        android:src="@drawable/plaka"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="238dp"
        android:layout_height="41dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="112dp"
        android:layout_marginBottom="124dp"
        android:text="81 İl Gezilecek Yerler"
        android:textAlignment="center"
        android:textSize="23dp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trGezi"
        app:layout_constraintTop_toBottomOf="@+id/textView36" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="362dp"
        android:text="Ülke Plaka Kodları"
        android:textAlignment="center"
        android:textSize="23dp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plakaUlke" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="244dp"
        android:layout_height="42dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="78dp"
        android:text="Seçim Ekranı"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="normal|bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
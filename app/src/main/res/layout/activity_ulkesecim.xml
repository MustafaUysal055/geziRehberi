<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".ekranbayrak">

    <ImageView
        android:id="@+id/trBayrak"
        android:layout_width="122dp"
        android:layout_height="79dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="80dp"
        android:onClick="trBayrak"
        app:layout_constraintBottom_toBottomOf="@+id/azBayrak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tr_bayrak" />

    <ImageView
        android:id="@+id/almBayrak"
        android:layout_width="117dp"
        android:layout_height="77dp"
        android:layout_marginTop="44dp"
        android:onClick="almBayrak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trBayrak"
        app:srcCompat="@drawable/alman_bayrak" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="318dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:text="Ülke Seçimi Yapın"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toEndOf="@+id/geri"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/azBayrak"
        android:layout_width="125dp"
        android:layout_height="78dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="28dp"
        android:onClick="azBayrak"
        android:src="@drawable/azbayrak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toEndOf="@+id/trBayrak"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/frBayrak"
        android:layout_width="120dp"
        android:layout_height="83dp"
        android:layout_marginTop="44dp"
        android:onClick="frBayrak"
        android:src="@drawable/frbayrak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toEndOf="@+id/almBayrak"
        app:layout_constraintTop_toBottomOf="@+id/azBayrak" />

    <ImageView
        android:id="@+id/itBayrak"
        android:layout_width="111dp"
        android:layout_height="76dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:onClick="itBayrak"
        android:src="@drawable/tbayrak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/almBayrak" />

    <ImageView
        android:id="@+id/geri"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:onClick="geri"
        android:src="@drawable/geri"
        app:layout_constraintBottom_toTopOf="@+id/trBayrak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>